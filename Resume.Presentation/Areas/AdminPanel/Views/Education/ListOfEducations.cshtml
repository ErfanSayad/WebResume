@model List<Resume.Domain.Entities.Education>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "لیست تحصیلات";
}

<div class="card" style="margin:0 20px;">

    <div class="card-body p-0">

        <table class="table table-hover align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th style="width: 10px">#</th>
                    <th>مدرک تحصیلی</th>
                    <th>بازه زمانی</th>
                    <th>توضیحات</th>
                    <th style="width: 300px">امکانات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var education in Model)
                {
                    <tr>
                        <td>@education.Id</td>
                        <td>@education.EducationTitle</td>
                        <td>@education.EducationDuration</td>
                        <td>@education.Description</td>
                        <td class="text-center">
                            <a href="@Url.Action("EditeEducation", "Education", new { EducationID = education.Id })" class="btn btn-sm btn-primary me-2">
                                <i class="fa fa-edit"></i> ویرایش
                            </a>
                            <a href="@Url.Action("DeleteEducation", "Education", new { EducationID = education.Id })" class="btn btn-sm btn-danger">
                                <i class="fa fa-trash"></i> حذف
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
    <!-- /.card-body -->
</div>